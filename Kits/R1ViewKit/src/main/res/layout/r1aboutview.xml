<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/r1_about_layout"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tomtom.navui.controlport.NavLabel
        android:id="@+id/r1_about_headerlabel"
        style="?attr/navui_titleStyle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/r1_about_headerlabel">

        <com.tomtom.navui.controlport.NavLabel
            android:id="@+id/r1_about_appversionvalue"
            style="?attr/navui_titleStyle" />

    </LinearLayout>

</RelativeLayout>