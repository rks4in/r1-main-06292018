<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:controlport="http://schemas.android.com/apk/res-auto" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/r1_about_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp">

            <com.tomtom.navui.controlport.NavLabel
                android:id="@+id/r1_about_appVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="#C0000000"
                android:shadowDx="1.0"
                android:shadowDy="1.0"
                android:shadowRadius="1.0"
                controlport:navui_textSize="20dp" />

            <com.tomtom.navui.controlport.NavLabel
                android:id="@+id/r1_about_mapName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:shadowColor="#C0000000"
                android:shadowDx="1.0"
                android:shadowDy="1.0"
                android:shadowRadius="1.0"
                controlport:navui_textSize="20dp" />

            <com.tomtom.navui.controlport.NavLabel
                android:id="@+id/r1_about_mapVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:shadowColor="#C0000000"
                android:shadowDx="1.0"
                android:shadowDy="1.0"
                android:shadowRadius="1.0"
                controlport:navui_textSize="20dp" />

            <com.tomtom.navui.controlport.NavLabel
                android:id="@+id/r1_about_navUiVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:shadowColor="#C0000000"
                android:shadowDx="1.0"
                android:shadowDy="1.0"
                android:shadowRadius="1.0"
                controlport:navui_textSize="20dp" />

            <com.tomtom.navui.controlport.NavLabel
                android:id="@+id/r1_about_navKitVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:shadowColor="#C0000000"
                android:shadowDx="1.0"
                android:shadowDy="1.0"
                android:shadowRadius="1.0"
                controlport:navui_textSize="20dp" />

        </LinearLayout>

    </RelativeLayout>
</merge>